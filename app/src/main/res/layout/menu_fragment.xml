<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:textColor="#FFFFFF"
            android:text="" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="end"
            android:src="@drawable/baseline_close_white_18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_db"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:src="@drawable/dbmenu"
            android:scaleType="centerCrop"
            android:foreground="@drawable/border" />

        <ImageView
            android:id="@+id/menu_dbz"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:src="@drawable/dbzmenu"
            android:scaleType="centerCrop"
            android:foreground="@drawable/border"/>

        <ImageView
            android:id="@+id/menu_dbgt"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/dbgtmenu"
            android:scaleType="centerCrop"
            android:foreground="@drawable/border" />

        <ImageView
            android:id="@+id/menu_dbs"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:src="@drawable/dbsmenu"
            android:scaleType="centerCrop"
            android:foreground="@drawable/border" />

    </LinearLayout>

</LinearLayout>